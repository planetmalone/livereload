{
    "manifest_version": 2,

    "name": "Liverelaod",
    "description": "Watches a port and reloads the page if neede",
    "version": "0.1",
    "content_scripts": [{
        "matches": ["http://*/*"],
        "js": ["popup.js"]
    }],
    "browser_action": {
        "default_icon": {
            "38": "livereload.png"
        }
    },
    "permissions": [
        "activeTab"
    ]
}
